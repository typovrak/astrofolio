---
import "@styles/global.css";
import BaseHead from "@components/BaseHead.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import Drawer from "@components/Drawer.astro";
import { SITE, COLORS } from "@consts";
import Galaxy from "@components/Galaxy.astro";

interface Props {
  title: string;
  description: string;
  keywords: string[];
  logoId: number;
  galaxyBg?: boolean;
}

const { title, description, keywords, logoId, galaxyBg = true } = Astro.props;
---

<!doctype html>
<html
  lang="fr"
  class="scrollbar-hidden"
  style={`--color-1:rgb(${COLORS.LOGO[logoId - 1][0]});--color-2:rgb(${COLORS.LOGO[logoId - 1][1]});--color-3:rgb(${COLORS.LOGO[logoId - 1][2]});`}
>
  <head>
    <BaseHead
      title={`${title} â–¸ ${SITE.TITLE}`}
      description={description}
      keywords={keywords}
      logoId={logoId}
    />
  </head>
  <body>
    <Header logoId={logoId} />
    <Drawer />
    <Galaxy />
    <main class={`${galaxyBg ? "relative bg-white/60 dark:bg-black/60" : ""}`}>
      <slot />
    </main>
    <Footer logoId={logoId} />
  </body>
</html>
